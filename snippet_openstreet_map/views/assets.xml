<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="assets_frontend_less" name="OpenStreetMap Styles Assets" inherit_id="website.assets_frontend">
            <xpath expr="." position="inside">
                <link type="text/scss" rel="stylesheet" href="/snippet_openstreet_map/static/src/scss/s_openstreet_map.scss" />
            </xpath>
        </template>

        <template id="assets_frontend_js" name="OpenStreetMap Frontend Assets" inherit_id="website.assets_frontend">
            <xpath expr="//script[last()]" position="after">
                <link type="text/less" rel="stylesheet" href="/snippet_openstreet_map/static/src/css/leaflet.css" />
                <script type="text/javascript" src="/snippet_openstreet_map/static/src/js/lib/leaflet.js"></script>
                <script type="text/javascript" src="/snippet_openstreet_map/static/src/js/s_openstreet_map_frontend.js"></script>
            </xpath>
        </template>

        <template id="assets_editor" name="OpenStreetMap Editor Assets" inherit_id="website.assets_editor">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/snippet_openstreet_map/static/src/js/s_openstreet_map_editor.js"></script>
            </xpath>
        </template>

    </data>
</odoo>
